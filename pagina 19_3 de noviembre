#include <stdio.h> 
#include <math.h>        /* Programa que calcula la hipotenusa, el area y el perimetro de un triangulo rectangulo a partir de sus catetos */ 
main() {
float catetol, cateto2, hipotenusa, area, perimetro;     /* Lectura de datos de entrada: catetol y cateto2 */ 
printf ("Catetol? ");
scanf ("%f", &catetol); 
printf ("Cateto2? "); 
scanf ("%f", &cateto2);        /* Proceso: calculo de la hipotenusa, del area y del perimetro */ 
hipotenusa=sqrt (catetol* catetol + cateto2*cateto2); 
area=(catetol*cateto2)/2.0; 
perimetro=catetol+cateto2+hipotenusa;      /* Salida de los resultados */ 
printf ("La hipotenusa es: %f\n", hipotenusa); 
printf ("El area es: %f\n", area); 
printf ("El perimetro es: %f\n", perimetro); 
}
